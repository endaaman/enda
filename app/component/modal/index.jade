.modal-overlay(v-if="shown" v-on="mousedown: close()")

.modal(v-if="shown" v-transition="modal" v-on="mousedown: block($event)")
    .modal-close
        button.clickable(v-on="click: close()")
            i.fa.fa-times
    .modal-header(v-if="title")
        h2 {{title}}
    .modal-content
        content
